@model IEnumerable<BL.ViewModel.ProductViewModel>
@{
    ViewBag.Title = "PhoneStore";
}

<h2 style="color:deepskyblue">PhoneStore <img src="~/Content/Img/logoo.gif"  style="width:100px;height:100px;" /></h2>
<div class="container">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">
            <div class="item active">
                <img src="~/Content/Img/Huawei-P40-Pro-2.jpg" alt="Los Angeles" style="width:500px;height:400px;">
            </div>

            <div class="item">
                <img src="~/Content/Img/Nokia 5.4.jpg" alt="Chicago" style="width:500px;height:400px;">
            </div>

            <div class="item">
                <img src="~/Content/Img/Oppo Reno 4.jpg" alt="New york" style="width:500px;height:400px;">
            </div>
        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>


<div class="row">
    <div style="display:flex;">
        <form action="\Home\Search" method="get">
            <input type="search" name="productName" class="form-control"
                   placeholder="Enter Mobile Name" />
            <br />
            <input type="submit" value="Search" style="background-color:green;color:white;" />
        </form>

        <form action="\Home\GetProductsByCategory" method="get" style="margin-left:50%;">
            <input type="search" name="id" class="form-control"
                   placeholder="Enter Category Id" />
            <br />
            <input type="submit" value="Search" style="background-color:green;color:white;" />
        </form>
    </div>

    @foreach (var item in Model)
    {

        <div class="col-lg-4 col-md-6 mb-4" style="width:280px;">
            <div style="margin-bottom:40px;background-color:antiquewhite;text-align:center" class="card h-100">

                <img src="~/Content/Img/@item.Image" style="padding:15px;width:250px;height:250px;" />
                <div class="card-body">
                    <h5>  @Html.DisplayFor(modelItem => item.Name)</h5>
                    <h4 class="card-title">
                        @Html.DisplayFor(modelItem => item.Price)
                    </h4>

                    <div class="form-actions no-color">
                        <input style="color:bisque" type="submit" value="Add To Cart" class="btn btn-default" />
                        <br />
                     
                        @Html.ActionLink("Details", "Details", new { id = item.Id })
                    </div>
                </div>
                <div class="card-footer">
                    <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                </div>
            </div>
        </div>
    }

</div>